<!-- views/contact.ejs -->
<!DOCTYPE html>
<html>
  <head>
    <title>JSaili</title>
    <link rel="stylesheet" href="/css/styles.css" />
  </head>
  <body>
    <!-- Header Section -->
    <%- include('./partials/header') %>

    <main class="contact-container">
      <div class="contact-first">
        <div>
          <h1>Contact Me</h1>
          <p>
            You can contact me anytime (24X7), just fill the contact form and I
            will get back to you.
          </p>
        </div>
      </div>
      <div class="contact-second">
        <div class="second-wrapper">
          <div class="contact-info">
            <p>Email: Jatinsaili786@gmail.com</p>
            <p>Phone: (437)-267-3786</p>
          </div>
          <div class="contact-form">
            <form action="/" method="post">
              <input
                type="text"
                name="firstName"
                placeholder="First Name"
                required
              />
              <input
                type="text"
                name="lastName"
                placeholder="Last Name"
                required
              />
              <input
                type="tel"
                name="contactNumber"
                placeholder="Contact Number"
                required
              />
              <input
                type="email"
                name="email"
                placeholder="Email Address"
                required
              />
              <textarea
                name="message"
                placeholder="Message"
                required
              ></textarea>
              <button type="submit">Send Message</button>
            </form>
          </div>
        </div>
      </div>
    </main>

    <!-- Footer Section -->
    <%- include('./partials/footer') %>
  </body>
</html>
